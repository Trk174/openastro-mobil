<body style="overflow: hidden;"> 

<div id="splash">
  <h1>OpenServer</h1>
  <div id="loading-text">Site is loading</div>
</div>

<div id="indicator">NAVIGHEAZĂ SPRE SOARE ↑</div>
<canvas id="sky"></canvas>

<script>
const canvas = document.getElementById('sky');
const ctx = canvas.getContext('2d', { alpha: false });
let stars = [], planets = [];
const shootingStars = [];
let time = 0;
let sunRotation = 0;

function init() {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
  const s = canvas.width / 1920; 
  
  stars = [];
  for (let i = 0; i < 2200; i++) {
    stars.push({ x: Math.random() * canvas.width, y: Math.random() * 18000, r: Math.random() * 1.5 * s, a: Math.random() });
  }
  
  planets = [
    { name: 'Soare', x: 0.5, y: 150, size: 400 * s, color: '#ffcc00', sun: true }, 
    { name: 'Mercur', x: 0.44, y: 3000, size: 38 * s, color: '#a5a5a5', moons: [] },
    { name: 'Venus', x: 0.56, y: 4800, size: 68 * s, color: '#e3bb76', moons: [] },
    { name: 'Pamant', x: 0.38, y: 6800, size: 75 * s, color: '#2271b3', 
      moons: [{ dist: 130 * s, speed: 0.02, size: 18 * s, color: '#dcdcdc' }] },
    { name: 'Marte', x: 0.62, y: 8800, size: 48 * s, color: '#b34b22', 
        moons: [{ dist: 75 * s, speed: 0.04, size: 9 * s, color: '#8b7d7b' }] },
    { name: 'Jupiter', x: 0.32, y: 11500, size: 240 * s, color: '#d39c7e', 
          moons: [
            { dist: 300 * s, speed: 0.015, size: 24 * s, color: '#fff' },
            { dist: 350 * s, speed: 0.011, size: 26 * s, color: '#ccc' }
          ] },
    { name: 'Saturn', x: 0.68, y: 14500, size: 210 * s, color: '#c5ab6e', ring: true,
            moons: [{ dist: 320 * s, speed: 0.009, size: 28 * s, color: '#ff8c00' }] },
    { name: 'Neptun', x: 0.5, y: 17500, size: 95 * s, color: '#4b70dd', moons: [] }
  ];
}

window.addEventListener('resize', init);
init();

// Intro Original
let dotCount = 0;
const loadingInterval = setInterval(() => {
  dotCount = (dotCount + 1) % 4;
  document.getElementById('loading-text').innerText = "Site is loading" + ".".repeat(dotCount);
}, 500);

setTimeout(() => {
  clearInterval(loadingInterval);
  const splash = document.getElementById('splash');
  splash.style.opacity = '0';
  document.body.style.overflow = 'auto';
  setTimeout(() => {
    splash.style.display = 'none';
    window.scrollTo(0, document.body.scrollHeight);
    document.getElementById('indicator').style.display = 'block';
  }, 1000);
}, 5500);

// Stele căzătoare (reduse cu 25%)
function spawnShootingStar() {
  if (shootingStars.length < 5) {
    const angle = Math.PI / 4 + (Math.random() * 0.2);
    const speed = 16 + Math.random() * 8;
    shootingStars.push({
      x: Math.random() * canvas.width,
      y: -150,
      vx: Math.cos(angle) * speed * (Math.random() > 0.5 ? 1 : -1),
      vy: Math.sin(angle) * speed,
      size: 2.5,
      life: 1.0
    });
  }
}
setInterval(spawnShootingStar, 1600);

// Funcția pentru RAZE SOLARE
function drawSunRays(x, y, radius) {
  sunRotation += 0.001;
  const numRays = 120;
  for (let i = 0; i < numRays; i++) {
    let angle = (i * Math.PI * 2) / numRays + sunRotation;
    let length = radius * 4.5 + Math.sin(sunRotation * 4 + i) * 60;
    
    let grd = ctx.createLinearGradient(x, y, x + Math.cos(angle) * length, y + Math.sin(angle) * length);
    grd.addColorStop(0, 'rgba(255, 220, 0, 0.4)');
    grd.addColorStop(1, 'transparent');
    
    ctx.strokeStyle = grd;
    ctx.lineWidth = 4;
    ctx.beginPath();
    ctx.moveTo(x, y);
    ctx.lineTo(x + Math.cos(angle) * length, y + Math.sin(angle) * length);
    ctx.stroke();
  }
}

function draw() {
  const scrollY = window.pageYOffset || document.documentElement.scrollTop;
  ctx.fillStyle = "#000";
  ctx.fillRect(0, 0, canvas.width, canvas.height);
  time += 0.4;
  
  stars.forEach(s => {
    const sy = s.y - scrollY;
    if (sy > 0 && sy < canvas.height) {
      ctx.globalAlpha = s.a; ctx.fillStyle = "white";
      ctx.beginPath(); ctx.arc(s.x, sy, s.r, 0, Math.PI * 2); ctx.fill();
    }
  });
  ctx.globalAlpha = 1;

  planets.forEach(p => {
    const sy = p.y - scrollY;
    const posX = canvas.width * p.x; 
    if (sy > -2000 && sy < canvas.height + 2000) {
      if (p.sun) {
        drawSunRays(posX, sy, p.size);
        let glow = ctx.createRadialGradient(posX, sy, p.size, posX, sy, p.size * 6);
        glow.addColorStop(0, 'rgba(255, 140, 0, 0.5)');
        glow.addColorStop(1, 'transparent');
        ctx.fillStyle = glow; ctx.beginPath(); ctx.arc(posX, sy, p.size * 6, 0, Math.PI*2); ctx.fill();
      }
      
      let grad = ctx.createRadialGradient(posX - p.size/3, sy - p.size/3, p.size/10, posX, sy, p.size);
      grad.addColorStop(0, p.color); grad.addColorStop(1, '#000');
      ctx.fillStyle = grad; ctx.beginPath(); ctx.arc(posX, sy, p.size, 0, Math.PI * 2); ctx.fill();
      
      if (p.ring) {
        ctx.strokeStyle = "rgba(255, 255, 255, 0.2)"; ctx.lineWidth = 5;
        ctx.beginPath(); ctx.ellipse(posX, sy, p.size * 2.8, p.size * 0.8, 0.4, 0, Math.PI*2); ctx.stroke();
      }
      
      if (p.moons) {
        p.moons.forEach(m => {
          const orbitAngle = time * m.speed;
          const mx = posX + Math.cos(orbitAngle) * m.dist;
          const my = sy + Math.sin(orbitAngle) * m.dist * 0.3;
          ctx.fillStyle = m.color; ctx.beginPath(); ctx.arc(mx, my, m.size, 0, Math.PI * 2); ctx.fill();
        });
      }
    }
  });

  for (let i = shootingStars.length - 1; i >= 0; i--) {
    let s = shootingStars[i];
    s.x += s.vx; s.y += s.vy; s.life -= 0.008;
    if (s.life <= 0) { shootingStars.splice(i, 1); continue; }
    let trailX = s.x - s.vx * 12;
    let trailY = s.y - s.vy * 12;
    let grd = ctx.createLinearGradient(s.x, s.y, trailX, trailY);
    grd.addColorStop(0, `rgba(255, 255, 255, ${s.life})`);
    grd.addColorStop(1, "transparent");
    ctx.beginPath(); ctx.strokeStyle = grd; ctx.lineWidth = s.size;
    ctx.moveTo(s.x, s.y); ctx.lineTo(trailX, trailY); ctx.stroke();
  }
  
  requestAnimationFrame(draw);
}
draw();
</script>
</body>
</html>
